
<div class="container">
  <div class="row mt-4">
    <div class="col-md-2 offset-md-1">
    <h4>商品一覧</h4>
    </div>
  </div>
  <div class="row mt-2">
    <% @items.each do |item| %>
      <div class="col-3">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image %>
        <% end %></br>
        <%= item.name %></br>
        <%= item.price.to_s(:delimited) %>
      </div>
    <% end %>
  </div>
  <div class="row mt-5">
    <div class="col-lg-6 offset-md-5">
      <div class="text-center"><%= paginate @items %></div>
    </div>
  </div>
</div>