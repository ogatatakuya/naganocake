<div class="container">
  <div class="row mt-4">
    <div class="col-md-3 offset-md-1">
      <h4><span class="pr-4 pl-4" style="background-color:whitesmoke;">会員情報編集</span></h4>
    </div>
  </div>
  <% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row mt-4">
    <div class="col-md-8 offset-md-1">
     <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
      <table class="table table-bordered">
        <tr>
          <td><%= f.label :last_name, "氏名"%></td>
          <td><%= f.text_field :last_name, style:"border-radius: 5px;" %></td>
          <td><%= f.text_field :first_name, style:"border-radius: 5px;" %></td>
       </tr>
       <tr>
          <td><%= f.label :last_name_kana, "フリガナ"%></td>
          <td><%= f.text_field :last_name_kana, style:"border-radius: 5px;" %></td>
          <td><%= f.text_field :first_name_kana, style:"border-radius: 5px;" %></td>
        </tr>
        <tr>
          <td><%= f.label :postal_code, "郵便番号"%></td>
          <td><%= f.text_field :postal_code, style:"border-radius: 5px;" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所"%></td>
          <td colspan="2"><%= f.text_area :address, style:"border-radius: 5px; width:500px;" %></td>
        </tr>
        <tr>
          <td><%= f.label :telephone_number, "電話番号"%></td>
          <td><%= f.telephone_field :telephone_number, style:"border-radius: 5px;" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス"%></td>
          <td><%= f.email_field :email, style:"border-radius: 5px;" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit '変更を保存', class:"btn btn-md btn-success" %></td>
        
          <td><%= link_to "退会する", customer_quit_path(@customer.id), class:"btn btn-md btn-danger" %></td>
        </tr>
      </table>
     <% end %>
        
    </div>
  </div>
</div>