
<div class="container">
  <div class="row mt-4">
    <div class="col-md-11 offset-md-1">
    <h4><span class="pr-4 pl-4" style="background-color:whitesmoke;">注文情報入力</span></h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-8">
      
        <h5>支払方法</h5>
        
        <%= form_with model: @order, url: order_confirm_path do |f| %>
          <div class="col-md-6 offset-md-1"><%= f.radio_button :payment, Order.payments.key(0) %>
            <%= f.label :payment, Order.payments_i18n[:credit_card] %></div>
          <div class="col-md-6 offset-md-1"><%= f.radio_button :payment, Order.payments.key(1) %>
            <%= f.label :payment, Order.payments_i18n[:transfer]%></div>
        
          <h5>お届け先</h5>
        
        
         <div class="col-md-10 offset-md-1"><%= f.radio_button :address_id, 0 %>
           〒<%= f.label :address_id, "ご自身の住所" %></div>
           <div class="col-md-10 offset-md-2"><%= current_customer.address_display %></div>
         <div class="col-md-10 offset-md-1"><%= f.radio_button :address_id, 1 %>
            <%= f.label :address_id, "登録済住所から選択" %></div>
            <div class="col-md-10 offset-md-2"><%= f.select :address, options_from_collection_for_select(Address.all, :id, :address_display), style:"width:400px;" %></div>
         <div class="col-md-10 offset-md-1"><%= f.radio_button :address_id, 2 %>
           <%= f.label :address_id, "新しいお届け先" %></div>
         <table class="table">
           
          <tr>
            <td style="width:80px;"></td>
            <td><%= f.label :postal_code, "郵便番号(ハイフンなし)"%></td>
            <td><%= f.text_field :postal_code %></td>
            
          </tr>
          <tr>
            <td></td>
            <td><%= f.label :address, "住所"%></td>
            <td><%= f.text_area :address, style:"width:400px;" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.label :name, "宛名"%></td>
            <td><%= f.text_field :name %></td>
          </tr>
         </table>
         <table class="table">      
          <tr class="text-center">
            <td></td>
            <td><%= f.submit "確認画面へ進む", class:"btn btn-md btn-primary" %></td>
          </tr>
          </table>
        <% end %>
      
    </div>
  </div>
</div>