
<div class="container">
  <div class="row mt-4">
    <div class="col-md-5 offset-md-1">
      <h4><span class="pr-4 pl-4" style="background-color:whitesmoke;">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span></h4>
    </div>
  </div>
  <% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row mt-4">
    <div class="col-md-8 offset-md-1">
        <%= form_with model: @customer,url: admin_customer_path do |f| %>
          <table class="table">
             <tr>
                <td><%= f.label :customer_id, "会員ID"%></td>
                <td><%= f.hidden_field :customer_id %></td>
             </tr>
             <tr>
                <td><%= f.label :last_name, "氏名"%></td>
                <td><%= f.text_field :last_name %></td>
                <td><%= f.text_field :first_name %></td>
             </tr>
             <tr>
                <td><%= f.label :last_name_kana, "フリガナ"%></td>
                <td><%= f.text_field :last_name_kana %></td>
                <td><%= f.text_field :first_name_kana %></td>
              </tr>
            　<tr>
                <td><%= f.label :postal_code, "郵便番号"%></td>
                <td><%= f.text_field :postal_code %></td>
              </tr>
            　<tr>
                <td><%= f.label :address, "住所"%></td>
                <td><%= f.text_area :address, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :telephone_number, "電話番号"%></td>
                <td><%= f.telephone_field :telephone_number %></td>
              </tr>
              <tr>
                <td><%= f.label :email, "メールアドレス"%></td>
                <td><%= f.email_field :email %></td>
              </tr>
              <tr>
                <td><%= f.label :is_deleted, "退会ステータス"%></td>
                <td><%= f.radio_button :is_deleted, :false  %>有効</td>
                <td><%= f.radio_button :is_deleted, :true  %>退会</td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit '変更を保存', class:"btn btn-md btn-success" %></td>
              </tr>
          </table>
        <% end %>
    </div>
  </div>
</div>