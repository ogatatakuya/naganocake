
<div class="container">
  <div class="row mt-4">
    <div class="col-md-2 offset-md-1">
    <h4><span class="pr-4 pl-4" style="background-color:whitesmoke;">会員一覧</span></h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-10 offset-md-1">
    <table class="table">
      <thead>
        <tr style="background-color:whitesmoke;">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to customer.full_name, admin_customer_path(customer.id) %>
                
              
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted == true %>
            <td style="color:gray;">退会</td>
            <% else %>
            <td style="color:green;">有効</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-6 offset-md-5">
      <div class="text-center"><%= paginate @customers %></div>
    </div>
  </div>
</div>