
<div class="container">
  <div class="row mt-4">
    <div class="col-md-5 offset-md-1">
      <h4><span class="pr-4 pl-4" style="background-color:whitesmoke;">ジャンル編集</span></h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-6">

<%= form_with model: @genre,url: admin_genre_path do |f| %>
<table class="table">
  <tr>
    <td><%= f.label :name, "ジャンル名"%></td>
    <td><%= f.text_field :name %></td>
